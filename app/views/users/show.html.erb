<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_infro">
      <h1>
        <%= @user.name %><br>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
           <h3>マイクロポストの総数 <%= @user.microposts.count %> 個 </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

